{
  "diff": true,
  "extension": [
    "js",
    "ts"
  ],
  "package": "./package.json",
  "reporter": "landing",
  "slow": 75,
  "timeout": 2000,
  "ui": "bdd",
  "watch-files": [
    "src/**/*.js",
    "src/**/*.ts",
    "test/**/*.js"
  ],
  "watch-ignore": [
    "node_modules",
    ".git",
    "coverage"
  ],
  "require": [
    "ts-node/register"
  ],
  "recursive": true
}
